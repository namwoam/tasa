if BR2_TOOLCHAIN_EXTERNAL_GAISLER_SPARC

config BR2_TOOLCHAIN_EXTERNAL_PREFIX
	default "sparc-gaisler-linux5.10" if BR2_TOOLCHAIN_EXTERNAL_GAISLER_SPARC_LINUX_5_10_GCC_10
	default "sparc-gaisler-linux4.9" if BR2_TOOLCHAIN_EXTERNAL_GAISLER_SPARC_LINUX_4_9_GCC_10

config BR2_PACKAGE_PROVIDES_TOOLCHAIN_EXTERNAL
	default "toolchain-external-gaisler-sparc"

config BR2_TOOLCHAIN_EXTERNAL_GAISLER_SPARC_LATEST_VERSION
       string
       default "linux5.10-1.4" if BR2_TOOLCHAIN_EXTERNAL_GAISLER_SPARC_LINUX_5_10_GCC_10
       default "linux4.9-2.1" if BR2_TOOLCHAIN_EXTERNAL_GAISLER_SPARC_LINUX_4_9_GCC_10

choice
	prompt "Gaisler SPARC/LEON toolchain variant"
config BR2_TOOLCHAIN_EXTERNAL_GAISLER_SPARC_LINUX_5_10_GCC_10
	bool "Gaisler SPARC/LEON GCC 10 toolchain with Linux 5.10 headers"
	depends on BR2_sparc
	select BR2_TOOLCHAIN_EXTERNAL_GLIBC
	select BR2_TOOLCHAIN_HAS_SSP
	select BR2_TOOLCHAIN_HAS_NATIVE_RPC
	select BR2_TOOLCHAIN_HAS_OPENMP
	select BR2_INSTALL_LIBSTDCPP
	select BR2_TOOLCHAIN_HEADERS_AT_LEAST_5_10
	select BR2_TOOLCHAIN_GCC_AT_LEAST_10
	select BR2_TOOLCHAIN_HAS_FORTRAN
	select BR2_TOOLCHAIN_HAS_GCC_LEON_MFIX_DEFINES
	select BR2_TOOLCHAIN_HAS_GLIBC_LEON_MFIX
	help
	  Gaisler SPARC/LEON GCC 10 toolchain with Linux 5.10 headers
	  With errata workaround support for UT700

config BR2_TOOLCHAIN_EXTERNAL_GAISLER_SPARC_LINUX_4_9_GCC_10
	bool "Gaisler SPARC/LEON GCC 10 toolchain with Linux 4.9 headers"
	depends on BR2_sparc && !BR2_sparc_leon5
	select BR2_TOOLCHAIN_EXTERNAL_GLIBC
	select BR2_TOOLCHAIN_HAS_SSP
	select BR2_TOOLCHAIN_HAS_NATIVE_RPC
	select BR2_TOOLCHAIN_HAS_OPENMP
	select BR2_INSTALL_LIBSTDCPP
	select BR2_TOOLCHAIN_HEADERS_AT_LEAST_4_9
	select BR2_TOOLCHAIN_GCC_AT_LEAST_10
	select BR2_TOOLCHAIN_HAS_FORTRAN
	select BR2_TOOLCHAIN_HAS_GCC_LEON_MFIX_DEFINES
	select BR2_TOOLCHAIN_HAS_GLIBC_LEON_MFIX
	help
	  Gaisler SPARC/LEON GCC 10 toolchain with Linux 4.9 headers
	  With errata workaround support for UT700

endchoice

endif
